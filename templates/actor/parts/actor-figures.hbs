<label class="resource-label flex-group-center flexcol">{{localize @root.config.labels.figures}}</label>
<div class="mb-50">
  <ol class='items-list'>
    <li class='item flexrow items-header'>
      <div class='item-name'>{{localize @root.config.labels.name}}</div>
      <div class='item-formula'>{{localize @root.config.identity.age}}</div>
      <div class='item-formula'>{{localize @root.config.labels.skill}}</div>
      <div class='item-controls'>
        <a
          class='item-control item-create'
          title='{{localize "DOCUMENT.Create" type='Figure'}}'
          data-type='figure'
        >
          <i class='fas fa-plus'></i>
          {{localize 'DOCUMENT.New' type='figure'}}
        </a>
      </div>
    </li>
    {{#each figures as |item id|}}
      <li class='item flexrow' data-item-id='{{item._id}}'>
        <div class='item-name'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='figure'>
              <img
                src='{{item.img}}'
                title='{{item.name}}'
                width='24'
                height='24'
              />
            </a>
          </div>
          <h4>{{item.name}}</h4>
        </div>
        <div class='item-formula item-prop'>{{item.system.age}}</div>
        <div class='item-formula item-prop'>
          {{localize (lookup @root.config.skills item.system.skill)}}
        </div>
        <div class='item-controls'>
          <a
            class='item-control item-edit'
            title='{{localize "DOCUMENT.Update" type='Figure'}}'
          >
            <i class='fas fa-edit'></i>
          </a>
          <a
            class='item-control item-delete'
            title='{{localize "DOCUMENT.Delete" type='Figure'}}'
          >
            <i class='fas fa-trash'></i>
          </a>
        </div>
      </li>
    {{/each}}
  </ol>
</div>
