<label class="resource-label flex-group-center flexcol">{{localize @root.config.labels.specialFeatures}}</label>
<div class="mb-50">
  <ol class='items-list'>
    <li class='item flexrow items-header'>
      <div class='item-name'>{{localize 'Name'}}</div>
      <div class='item-formula'>{{localize 'Type'}}</div>
      <div class='item-controls'>
        <a
          class='item-control item-create'
          title='{{localize "DOCUMENT.Create" type='Special'}}'
          data-type='special'
        >
          <i class='fas fa-plus'></i>
          {{localize 'DOCUMENT.New' type='special'}}
        </a>
      </div>
    </li>
    {{#each special as |item id|}}
      <li class='item flexrow' data-item-id='{{item._id}}'>
        <div class='item-name'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='Special'>
              <img
                src='{{item.img}}'
                title='{{item.name}}'
                width='24'
                height='24'
              />
            </a>
          </div>
          <h4>{{item.name}}</h4>
        </div>
        <div class='item-formula item-prop'>
          {{localize (lookup @root.config.featureType item.system.type)}}
          {{#unless item.system.type}}{{ localize @root.config.labels.capacity }}{{/unless}}
        </div>
        <div class='item-controls'>
          <a
            class='item-control item-edit'
            title='{{localize "DOCUMENT.Update" type='Special'}}'
          >
            <i class='fas fa-edit'></i>
          </a>
          <a
            class='item-control item-delete'
            title='{{localize "DOCUMENT.Delete" type='Special'}}'
          >
            <i class='fas fa-trash'></i>
          </a>
        </div>
      </li>
    {{/each}}
  </ol>
</div>
