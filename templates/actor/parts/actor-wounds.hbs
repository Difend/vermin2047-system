        <td>
            <input type="text" class="attribute" name="system.wounds.light.threshold" value="{{system.wounds.light.threshold}}" data-dtype="Number"/>
        </td>
        <td>
            {{#each system.arrays.wounds.light as |val i|}}
            <input class="check-pool" name="wounds.light.value" type="checkbox" data-dtype="Number" value={{i}} {{checked val}}>
            {{/each}}
        </td>
        <td>
            <input type="text" class="attribute" name="system.wounds.light.limit" value="{{system.wounds.light.limit}}" data-dtype="Number"/>
