<label class="resource-label flex-group-center flexcol">{{localize @root.config.labels.wounds}}</label>
<table>
    <tr>
        <th></th>
        <th><label for="system.wounds.light.threshold" class="resource-label flexlarge align-center" data-label="{{localize @root.config.labels.threshold}}">{{localize @root.config.labels.threshold}}</label></th>
        <th><label for="system.wounds.light.value" class="resource-label flexlarge align-center" data-label="{{localize @root.config.labels.count}}">{{localize @root.config.labels.count}}</label></th>
