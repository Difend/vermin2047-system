<label class="resource-label flex-group-center flexcol">{{localize @root.config.labels.weapons}}</label>
<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize @root.config.labels.name}}</div>
    <div class='item-formula'>{{localize @root.config.labels.skill}}</div>
    <div class='item-formula'>{{localize @root.config.labels.damage}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='{{localize "DOCUMENT.Create" type='Weapon'}}'
        data-type='weapon'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='weapon'}}
      </a>
    </div>
  </li>
  {{#each weapons as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='fight-roll' data-skill='{{item.system.skill.value}}' data-max-short-range='{{item.system.range.max_short}}' data-max-medium-range='{{item.system.range.max_medium}}'>
            <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class='item-formula item-prop'>{{localize (lookup @root.config.fightSkills item.system.skill.value)}}</div>
      <div class='item-formula item-prop'>{{item.system.damage.amount}} {{localize (lookup @root.config.damageTypes item.system.damage.type)}}</div>
      <div class='item-controls'>
        <a
          class='item-control item-edit'
          title='{{localize "DOCUMENT.Update" type='Weapon'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" type='Weapon'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>