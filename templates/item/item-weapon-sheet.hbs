<form class='{{cssClass}}' autocomplete='off'>
  <header class='sheet-header'>
    <img
      class='profile-img'
      src='{{item.img}}'
      data-edit='img'
      title='{{item.name}}'
    />
    <div class='header-fields'>
      <h1 class='charname'><input
          name='name'
          type='text'
          value='{{item.name}}'
          placeholder='Name'
        /></h1>
    </div>
  </header>

  {{! Sheet Tab Navigation }}
  <nav class='sheet-tabs tabs' data-group='primary'>
    <a class='item' data-tab='attributes'>{{localize @root.config.labels.attributes}}</a>
  </nav>

  {{! Sheet Body }}
  <section class='sheet-body'>
    {{! Attributes Tab }}
    <div class='tab attributes' data-group='primary' data-tab='attributes'>
      {{! As you add new fields, add them in here! }}
      <div class="flexrow">
        <div class='resource mb-5'>
          <label class='resource-label'>{{localize @root.config.labels.rarity}}</label>
          <input
            type='text'
            name='system.rarity.value'
            value='{{system.rarity.value}}'
            data-dtype='Number'
            class="attribute"
          />
          <select name="system.rarity.criteria" data-dtype='Number'>
            <option value=0>-</option>
            <option value=1>(I)</option>
            <option value=2>(II)</option>
          </select>
        </div>
        <div class="resource mb-5">
          <label for="system.skill.value" class="resource-label flexlarge align-left" data-label="{{localize @root.config.labels.skills}}">{{localize @root.config.labels.skills}}</label>
          <select name="system.skill.value" data-dtype="String">
            {{selectOptions @root.config.fightSkills selected=system.skill.value localize=true}}
          </select>
        </div>
      </div>
      <div class="flexrow">
        <div class='resource mb-5'>
          <label class='resource-label'>{{localize @root.config.labels.range}}</label>
          <input
            type='text'
            name='system.range.max_short'
            value='{{system.range.max_short}}'
            data-dtype='Number'
            class="attribute"
          />
          /
          <input
            type='text'
            name='system.range.max_medium'
            value='{{system.range.max_medium}}'
            data-dtype='Number'
            class="attribute"
          />
        </div>
        <div class="resource mb-5">
          <label class='resource-label'>{{localize @root.config.labels.damage}}</label>
          <input
            type='text'
            name='system.damage.amount'
            value='{{system.damage.amount}}'
            data-dtype='Number'
            class="attribute"
          />
          <select name="system.damage.type" data-dtype="String">
            {{selectOptions @root.config.damageTypes selected=system.damage.type localize=true}}
          </select>
        </div>
      </div>
      <div class="resource mb-5">
        <label for="system.description" class="resource-label flexlarge align-left" data-label="{{localize @root.config.labels.description}}">{{localize @root.config.labels.description}}</label>
        <textarea name="system.description" rows="4">{{system.description}}</textarea>
      </div>
      <div class="resource mb-50">
        <label class="resource-label flex-group-center flexcol">{{localize @root.config.labels.traits}}</label>
        {{> "systems/vermin-2047/templates/actor/parts/actor-effects.hbs"}}
      </div>
    </div>
  </section>
</form>