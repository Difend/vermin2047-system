<form class='{{cssClass}}' autocomplete='off'>
  <header class='sheet-header'>
    <img
      class='profile-img'
      src='{{item.img}}'
      data-edit='img'
      title='{{item.name}}'
    />
    <div class='header-fields'>
      <h1 class='charname'><input
          name='name'
          type='text'
          value='{{item.name}}'
          placeholder='Name'
        /></h1>
    </div>
  </header>

  {{! Sheet Tab Navigation }}
  <nav class='sheet-tabs tabs' data-group='primary'>
    <a class='item' data-tab='attributes'>{{localize @root.config.labels.attributes}}</a>
  </nav>

  {{! Sheet Body }}
  <section class='sheet-body'>
    {{! Attributes Tab }}
    <div class='tab attributes' data-group='primary' data-tab='attributes'>
      {{! As you add new fields, add them in here! }}
      <div class="flexrow">
        <div class='resource mb-5'>
          <label class='resource-label'>{{localize @root.config.labels.level}}</label>
          <input
            type='text'
            name='system.level'
            value='{{system.level}}'
            data-dtype='Number'
            class="attribute"
          />
        </div>
        <div class="resource mb-5">
          <label for="system.totem" class="resource-label">{{localize @root.config.identity.tot}}</label>
          <select name="system.totem" data-dtype="String">
            {{selectOptions @root.config.identityValues.tot selected=system.totem localize=true}}
          </select>
        </div>
      </div>
      <div class="flexrow">
        <div class='resource mb-5'>
          <label class='resource-label'>{{localize @root.config.labels.learning}}</label>
          <input
            type='text'
            name='system.learning.difficulty'
            value='{{system.learning.difficulty}}'
            data-dtype='Number'
            class="attribute"
          />
          <select name="system.learning.handicap" data-dtype="Number">
            {{selectOptions @root.config.ranks selected=system.learning.handicap localize=true}}
          </select>
        </div>
      </div>
      <div class="resource mb-5">
        <label for="system.description" class="resource-label flexlarge align-left" data-label="{{localize @root.config.labels.description}}">{{localize @root.config.labels.description}}</label>
        <textarea name="system.description" rows="4">{{system.description}}</textarea>
      </div>
    </div>
  </section>
</form>